{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "baseUrl": "..",
    "paths": { "@/*": ["./*"] }
  },
  "include": ["./**/*.ts", "../lib/**/*.ts"]
}
